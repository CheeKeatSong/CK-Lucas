<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tag="Bottom3"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/light_kdu_blue">

                <ImageButton
                    android:id="@+id/start_survey"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_kdu_blue"
                    android:src="@drawable/ic_initiate"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/letter_icon"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="start|center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/student_survey_name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp"
                        android:layout_gravity="start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="start"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/student_survey_subject_code_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_gravity="end"
                        android:textColor="@color/black"
                        android:id="@+id/student_survey_lecturer_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="0"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="start"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/student_survey_subject_school_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_gravity="end"
                        android:textColor="@color/black"
                        android:id="@+id/student_survey_status_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="0"/>

                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/student_survey_uid_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>