<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/survey_fragment_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/survey_fragment_progress_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/kdu_blue">

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:text="@string/survey_details"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_kdu_blue"
        android:textSize="16dp"
        android:text="@string/fragment_survey_subject"/>

            <TextView
                android:id="@+id/fragment_survey_code_category"
                android:layout_marginRight="12dp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="16dp"/>

        </LinearLayout>

        <TextView
            android:layout_marginRight="6dp"
            android:id="@+id/fragment_survey_subject_text_view"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="16dp"
                android:text="@string/fragment_survey_lecturer"/>

        </LinearLayout>
        <TextView
            android:layout_marginRight="6dp"
            android:id="@+id/fragment_survey_lecturer"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="16dp"
                android:text="@string/fragment_survey_school"/>

        </LinearLayout>

        <TextView
            android:layout_marginRight="6dp"
            android:id="@+id/fragment_survey_school"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"/>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"
            android:text="@string/fragment_survey_sem"
            android:id="@+id/textView3"/>

        <TextView
            android:id="@+id/fragment_survey_sem"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="16dp"
                android:text="@string/fragment_survey_date"/>

            <TextView
                android:id="@+id/fragment_survey_date"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="16dp"/>

        </LinearLayout>

    <LinearLayout
        android:background="@drawable/border_kdu_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/survey_fragment_respond_overview_button"
            android:background="@color/kdu_blue"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="@string/fragment_survey_respond_overview"/>

        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/transparent_white">
        </LinearLayout>

        <Button
            android:id="@+id/survey_fragment_subjective_respond_button"
            android:textColor="@color/white"
            android:background="@color/kdu_blue"
            android:textSize="14dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/fragment_survey_subjective_response"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/survey_fragment_linear_layout_respond_overview"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"
            android:text="@string/fragment_survey_total_score_of_each_question"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_survey_queston_rating1"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_queston_rating2"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_queston_rating3"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_queston_rating4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_kdu_blue"
            android:textSize="16dp"
            android:text="@string/fragment_survey_total_score_of_each_rating"/>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_survey_total_rating1"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_total_rating2"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_total_rating3"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_total_rating4"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/fragment_survey_total_rating5"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:textSize="14dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:padding="2dp"
            android:background="@drawable/border_kdu_blue"
            android:visibility="gone"
            android:id="@+id/survey_fragment_linear_layout_subjective_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_subject_respond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_kdu_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/kdu_blue">

        <TextView
            android:layout_weight="1"
            android:textSize="18dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/fragment_survey_student_list"
            android:id="@+id/textView2"/>

        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/survey_fragment_add_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_menu_add"/>

        <Button
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/survey_fragment_delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_delete"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:scrollbars="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:padding="2dp"
                                            android:id="@+id/fragment_survey_recycler_view">
    </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/kdu_blue"></LinearLayout>

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/fragment_survey_data_okay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@color/kdu_blue"
        android:layout_weight="1"
        android:text="@string/confirm"/>

    <Button
        android:text="@string/cancel"
        android:layout_weight="1"
        android:id="@+id/fragment_survey_data_cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@color/kdu_blue"/>

</LinearLayout>
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
