<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:layout_marginLeft="2dp"
              android:layout_marginRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:id="@+id/survey_fragment_student_list_item_name"
                android:textSize="16dp"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_kdu_blue"
                android:id="@+id/survey_fragment_student_list_item_status"
                android:textSize="14dp"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/survey_fragment_student_list_item_uid"
                android:textSize="16dp"/>

        </LinearLayout>

        <CheckBox
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/survey_fragment_student_list_checkbox"/>

    </LinearLayout>
</LinearLayout>
